pipeline {
    agent any
    tools {
        nodejs "nodejs-14.17.0" // Corrigir o nome da ferramenta Node.js
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/Mazielluiz/DevOpsCI.git']]])
            }
        }
        stage('Build') {
            steps {
                bat 'npm install'
                bat 'npm run build'
            }
        }
        stage('Run Unit Tests') {
            steps {
                bat 'npm test'
            }
        }
        stage('Start ngrok') {
            steps {
                bat 'ngrok http 80'
            }
        }
    }
}