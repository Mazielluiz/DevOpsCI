pipeline {
    agent any
    tools {
        nodejs "NodeJS_12" // Corrigir o nome da ferramenta Node.js
    }
    stages {
        stage('Clean Workspace') { // Adicionar stage para limpar a workspace
            steps {
                deleteDir()
            }
        }
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/Mazielluiz/DevOpsCI.git']]])
            }
        }
        stage('Build') {
            steps {
                bat 'npm install'
                bat 'npm run build'
            }
        }
        stage('Run Unit Tests') {
            steps {
                bat 'npm run test'
            }
        }
        stage('Deploy') {
            steps {
                bat 'npm run deploy'
            }
        }
        stage('Commit') {
            steps {
                bat 'git add .'
                bat 'git commit -m "Automated commit"'
                bat 'git push origin main'
            }
        }
    }
    post {
        always {
            cleanWs() // Limpar a workspace após a execução do pipeline
        }
    }
}